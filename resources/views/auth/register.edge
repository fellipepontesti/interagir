<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">

  <title>Criar usuário</title>
  @entryPointStyles('app')
  @entryPointScripts('app')

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <ul class="nav">
      <li class="nav-item navbar-brand">
        <a class="navbar-brand" href="#">
          <img src="assets/logo.png" alt="" width="30" height="30" class="d-inline-block align-top"/>
        </a>
      </li>
      <li class="nav-item navbar-brand">
        <a class="nav-link active" style="color: #ffffff;" href="/usuarios">Alunos</a>
      </li>
      <li class="nav-item navbar-brand">
        <a class="nav-link"  style="color: #ffffff;" href="#">Link</a>
      </li>
      <li class="nav-item navbar-brand">
        <a class="nav-link" style="color: #ffffff;" href="#">Link</a>
      </li>
      <li class="nav-item navbar-brand">
        <a class="nav-link" style="color: #ffffff;" href="#">Disabled</a>
      </li>
    </ul>
  </nav>
  <div class="container py-4">
    <header class="pb-3 mb-4 border-bottom">
      <a href="/" class="d-flex align-items-center text-dark text-decoration-none">
        <span class="fs-4">Criar usuário</span>
      </a>
    </header>
    <div class="p-5 mb-4 rounded-3">
      <div class="container-fluid py-8">
        <form action="{{ route('auth.register') }}" method="POST">
          <div class="mb-3">
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="tipo" id="inlineRadio1" value="1" onchange="handleTipoChange(this)">
              <label class="form-check-label" for="inlineRadio1">Aluno</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="tipo" id="inlineRadio1" value="2" onchange="handleTipoChange(this)">
              <label class="form-check-label" for="inlineRadio1">Professor</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="tipo" id="inlineRadio1" value="3" onchange="handleTipoChange(this)">
              <label class="form-check-label" for="inlineRadio1">Coordenador</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="tipo" id="inlineRadio1" value="4" onchange="handleTipoChange(this)">
              <label class="form-check-label" for="inlineRadio1">Diretor</label>
            </div>
          </div>
          <div class="mb-3">
            <div class="row">
              <div class="col">
                <input type="text" name="nome" placeholder="Nome completo" class="form-control" id="nomeUser">
              </div>
              <div class="col">
                <input placeholder="Data de nascimento" name="data_de_nascimento" type="text" class="form-control">
              </div>
            </div>
          </div>
          <div class="mb-3">
            <div class="row">
              <div class="col">
                <input type="text" name="nome_do_pai" placeholder="Nome do pai" class="form-control" id="nomeUser">
              </div>
              <div class="col">
                <input type="text" name="nome_da_mae" placeholder="Nome da mae" class="form-control">
              </div>
            </div>
          </div>
          <div class="mb-3">
            <input type="text" placeholder="Endereço" name="endereco" class="form-control">
          </div>
          <div class="mb-3">
            <div class="row">
              <div class="col">
                <input placeholder="Celular" type="text" name="contato_principal" class="form-control">
              </div>
              <div class="col">
                <input type="text" placeholder="Telefone" name="contato_secundario" class="form-control">
              </div>
            </div>
          </div>
          <div class="mb-3">
            <textarea placeholder="Observações" class="form-control" rows="3"></textarea>
          </div>
          <div class="mb-3">
            <h2>Dados de acesso</h2>
            <div class="mb-3">
              <input type="email" placeholder="E-mail" class="form-control" name="email">
            </div>
            <div class='row'>
              <div class="col-6">
                <input type="password" placeholder="Senha" class="form-control" name="password">
              </div>
              <div class="col-6">
                <input type="password" placeholder="Confirmar senha" class="form-control">
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>
      </div>
    </div>
  </div>
</body>
<script>
  function handleTipoChange(radioButton) {
    const tipoUsuario = radioButton.value;
    toInt(tipoUsuario);
  }

  function toInt(tipoUsuario) {
    return parseInt(tipoUsuario);
  }
</script>
</html>
